<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#50000000" /> <!-- Semi-transparent shadow -->
        </shape>
    </item>

    <!-- Main Shape Layer -->
    <item
        android:bottom="0.6dp"
        android:left="0.6dp"
        android:right="0.6dp"
        android:top="0.6dp"> <!-- Offset to create shadow effect -->
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FFFFFF" /> <!-- Main button background -->
        </shape>
    </item>

</layer-list><!--<?xml version="1.0" encoding="utf-8"?>-->
